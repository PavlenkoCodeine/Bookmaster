<Application x:Class="Bookmaster.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Bookmaster"
             StartupUri="\View\Windows\BrowseCatalogWindow.xaml">
    <Application.Resources>
        <!--Включаем словари ресурсов-->
        <ResourceDictionary>

            <SolidColorBrush x:Key="LightGreen1" Color="#8fa43b"/>
            <SolidColorBrush x:Key="LightGreen2" Color="#718136"/>
            <SolidColorBrush x:Key="DarkGreen" Color="#50673b"/>
            <SolidColorBrush x:Key="Grey" Color="#bfbfbf"/>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles\ButtonStyle.xaml"/>
                <ResourceDictionary Source="Styles\TextBlockStyle.xaml"/>
                <ResourceDictionary Source="Styles\TextBoxStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
